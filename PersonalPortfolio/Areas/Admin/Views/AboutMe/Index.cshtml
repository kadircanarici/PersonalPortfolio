@section Styles
    {
    <!-- DataTables -->
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Intro</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Settings</a></li>
                    <li class="breadcrumb-item active">Intro Settings</li>
                </ol>
            </div>

        </div>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">


                <p class="card-title-desc">
                    Bu ekranda Introyu düzenleyeblirsiniz.
                </p>

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description </th>
                            <th>Resim</th>
                            <th>Dönen yazı</th>
                            <th>İşlemler</th>

                        </tr>
                    </thead>


                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </div> <!-- end col -->
</div> <!-- end row -->




<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Yeni Slide Yazı Türü Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3 row">
                    <label for="example-text-input" class="col-md-4 col-form-label">txtTitleStart</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" placeholder="txtTitle" id="txtTitleStart">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="example-text-input" class="col-md-4 col-form-label"><u>txtTitleMidLine</u></label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" placeholder="txtDescription" id="txtTitleMidLine">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="example-text-input" class="col-md-4 col-form-label">txtTitleEnd</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" placeholder="txtImg" id="txtTitleEnd">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Content</label>
                    <div>
                        <textarea required class="form-control" rows="5" id="txtCurved"></textarea>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnEdit" class="btn btn-primary waves-effect waves-light">Ekle</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section Scripts{
    <!-- Required datatable js -->
    <script src="~/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <!-- Buttons examples -->
    <script src="~/assets/libs/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/libs/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
    <script src="~/assets/libs/jszip/jszip.min.js"></script>
    <script src="~/assets/libs/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/assets/libs/pdfmake/build/vfs_fonts.js"></script>
    <script src="~/assets/libs/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/assets/libs/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/assets/libs/datatables.net-buttons/js/buttons.colVis.min.js"></script>

    <!-- Responsive examples -->
    <script src="~/assets/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>

    <script type="text/javascript">
        var dataTable = $("#datatable-buttons").DataTable(
            {
                lengthChange: !1,
                buttons: ["copy", "excel", "pdf", "colvis"],
                ajax: "@Url.Action("GetAll","Intro")",
                columns: [
                    { data: 'title' },
                    { data: 'description' },
                    { data: 'imagePath' },
                    { data: 'curvedText' },
                    {
                        data: 'id',
                        render: function (data, type) {
                            return `<a onClick="editAboutMe('${data}')" class="btn btn-info">Düzenle</a>`;
                        }
                    }
                ]
            }
        );
        function editAboutMe(id) {
            $("#modal").modal('show');
            console.log("edit e tıklandı");
            var veri = { id: id };
            $.ajax({
                type: "POST",
                data: veri,
                url: "@Url.Action("GetByID","AboutMe")",
                success: function (res) {
                    $("#txtDescription").val(res.titleStart);
                    console.log(res.id);
                    $("#txtDescription").val(res.titleMidLine);
                    $("#txtImg").val(res.titleEnd);
                    $("#txtCurved").val(res.content);
                    $("#btnEdit").click(function () {
                        var veri =
                        {
                            id: id,
                            titleStart: $("#txtDescription").val(),
                            titleMidLine: $("#txtDescription").val(),
                            titleEnd: $("#txtImg").val(),
                            content: $("#txtCurved").val(),
                        };
                        console.log(veri);
                        $.ajax({
                            type: "POST",
                            url: "@Url.Action("Edit","AboutMe")",
                            data: veri,
                            success: function (res) {
                                dataTable.ajax.reload();
                                toastr.success('AboutMe basarıyla güncellendi', 'Düzenlendi !');
                                $("#modal").modal('hide');
                            }
                        });
                    })

                }
            });
        }

    </script>
    }